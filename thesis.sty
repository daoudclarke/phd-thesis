%Font for chapter headings:
\font\cmtitle=cmssdc10 at 20pt
\font\cmchapter=cmssdc10 at 24pt
\font\cmchapternum=cmssdc10 at 16pt
\font\cmsection=cmssdc10 at 16pt
 
 %Drop Capitals for beginning of chapters:
 \newcommand{\dropcap}[1]{
 \setbox1=\hbox{\cmbig #1}
\dimen1=\wd1
\dimen2=\ht1
\box1\nointerlineskip
\advance\dimen2 by 1.5pt
\vskip-\dimen2
\advance\dimen1 by -2pt
\hangindent=\dimen1 \hangafter=-4\noindent
}

